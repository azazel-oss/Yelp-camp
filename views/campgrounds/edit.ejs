<% layout('layouts/boilerplate.ejs') %>
<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/campgrounds/<%= campground._id %>?_method=PUT"
      method="post"
      novalidate
      class="validate-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Enter title:</label>
        <input
          type="text"
          name="campground[title]"
          id="title"
          class="form-control"
          value="<%= campground.title %>"
          required
        />
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Enter location:</label>
        <input
          type="text"
          name="campground[location]"
          id="location"
          class="form-control"
          value="<%= campground.location %>"
          required
        />
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Add more images:</label>
        <input
          type="file"
          class="form-control"
          name="image"
          id="images"
          accept="image/*"
          multiple
        />
      </div>
      <div class="mb-3">
        <% campground.images.forEach((image, index) => { %>
        <img src="<%= image.thumbnail %>" class="img-thumbnail" alt="image" />
        <div class="form-check-inline">
          <input
            type="checkbox"
            name="deleteImages[]"
            value="<%= image.filename %>"
            id="image-<%= index %>"
          />
          <label for="image-<%= index %>">Delete?</label>
        </div>
        <% }) %>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Enter price:</label>
        <div class="input-group">
          <span class="input-group-text" id="basic-addon1">$</span>
          <input
            type="text"
            id="price"
            name="campground[price]"
            class="form-control"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price"
            value="<%= campground.price %>"
            required
          />
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Enter description:</label>
        <textarea
          name="campground[description]"
          id="description"
          cols="30"
          rows="10"
          class="form-control"
          required
        >
<%= campground.description %></textarea
        >
      </div>
      <div class="mb-3">
        <input type="submit" value="Update" class="btn btn-info" />
      </div>
    </form>
    <p><a href="/campgrounds/<%= campground._id %>">Back to campground</a></p>
  </div>
</div>

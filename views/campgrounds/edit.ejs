<% layout('layouts/boilerplate.ejs') %>
<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
      <div class="mb-3">
        <label for="title" class="form-label">Enter title:</label>
        <input
          type="text"
          name="campground[title]"
          id="title"
          class="form-control"
          value="<%= campground.title %>"
        />
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Enter location:</label>
        <input
          type="text"
          name="campground[location]"
          id="location"
          class="form-control"
          value="<%= campground.location %>"
        />
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Enter image url:</label>
        <input
          type="text"
          name="campground[image]"
          id="image"
          class="form-control"
          value="<%= campground.image %>"
        />
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Enter price:</label>
        <div class="input-group">
          <span class="input-group-text" id="basic-addon1">$</span>
          <input
            type="text"
            id="price"
            name="campground[price]"
            class="form-control"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price"
            value="<%= campground.price %>"
          />
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Enter description:</label>
        <textarea
          name="campground[description]"
          id="description"
          cols="30"
          rows="10"
          class="form-control"
        >
<%= campground.description %></textarea
        >
      </div>
      <div class="mb-3">
        <input type="submit" value="Update" class="btn btn-info" />
      </div>
    </form>
    <p><a href="/campgrounds/<%= campground._id %>">Back to campground</a></p>
  </div>
</div>
